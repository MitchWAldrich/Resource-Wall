<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Create a Resource</title>
  <script src="https://kit.fontawesome.com/b5e8de9747.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <!-- Font -->
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
  <!-- Stylesheet -->
  <link rel="stylesheet" href="/styles/create.css">
</head>

<body>
  <%- include('partials/header') %>
  <main id="main-block">
    <div class="main-block-header">
      <h1>Create a Resource</h1>
    </div>
    <form id="details" method="POST "action="/resource/:id">
      <div class="info">
        <input class="category" type="text" name="category" placeholder="Category">
        <input class="title" type="text" name="name" placeholder="Title">
        <input class ="link" type="text" name="name" placeholder="Enter link to thumbnail picture...">
        <textarea name="summary" rows="3" cols="50" placeholder="Enter your summary here..."></textarea>
        <textarea name="contents" rows="8" cols="50" placeholder="Enter contents here..."></textarea>
        <div class="tags">
          <input type="text" name="name" placeholder="#tag1">
          <input type="text" name="name" placeholder="#tag2">
          <input type="text" name="name" placeholder="#tag3">
        </div>
        <input class ="link" type="text" name="name" placeholder="Enter link to source...">
      </div>
      <button type="submit" href="/my-resources">Submit</button>
    </form>
  </main>
</body>
</html>
